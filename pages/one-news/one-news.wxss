page {
  background-color: #f4f4f4;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.n-1 {
  width: 694rpx;
  height: 100rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  line-height: 100rpx;
  font-size: 30rpx;
  /* padding-left: 40rpx; */
  text-align: center;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.inner {
  position: absolute;
  top: 0;
}

.n-2 {
  width: 100%;
  z-index: 5;
  /* padding: 0 10rpx; */
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
  background-color: #fff;
}

.del {
  width: 150rpx;
  /* right: -100rpx; */
  background: #e64340;
  text-align: center;
  z-index: 4;
  right: 0;
  color: #fff;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
